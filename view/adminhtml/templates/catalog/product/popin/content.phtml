    <?php
    $website = $store->getWebsite();
    $storeValue = $this->getStoreValue($store->getId());
    ?>
    <ul class="scopes">
        <li><label><?php echo $website->getName().' > ' ?><a href="<?php echo $this->getUrlBuilder()->getUrl('catalog/product/edit', ['id' => $this->getCurrentProductId(), 'store' => $store->getId()]) ?>"><?php echo $store->getName() ?></a></label> : <?php echo $storeValue !== null ? htmlentities($storeValue) : '<span>NULL</span>' ?></li>
    </ul>
<?php endforeach ?>