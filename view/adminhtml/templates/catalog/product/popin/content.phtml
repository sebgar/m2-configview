<?php
/* @var $this Sga\Configview\Block\Adminhtml\Catalog\Product\Popin */
$defaultValue = $this->getDefaultValue();
?>
<div class="show-in">
    <ul>
        <li>
            <label><?= __('Attribute Code') ?> :</label>
            <?= $this->getAttributeCode() ?>
        </li>
    </ul>
</div>

<div class="default">
    <label><a href="<?php echo $this->getUrlBuilder()->getUrl('catalog/product/edit', ['id' => $this->getCurrentProductId()]) ?>"><?= __('Default') ?></a></label> : <?php echo $defaultValue !== null ? htmlentities($defaultValue) : '<span>NULL</span>' ?>
